<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doowa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Doowa"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".PreviewActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".FAQActivity"
            android:exported="false"
            android:label="Frequently Asked Questions" />
        <activity
            android:name=".checkSubmissionLocation"
            android:exported="false"
            android:label="Submission Location" />
        <activity
            android:name=".TrackingActivity"
            android:exported="false"
            android:label="@string/tracker_title" />
        <activity
            android:name=".ListDetailsActivity"
            android:exported="false"
            android:label="Submission Details" />
        <activity
            android:name=".SubmissionListActivity"
            android:exported="false"
            android:label="@string/sublist_title" />
        <activity
            android:name=".HistoryListActivity"
            android:exported="false"
            android:label="@string/historylist_title" />
        <activity
            android:name=".CameraActivity"
            android:exported="false"
            android:label="@string/camera_title" />
        <activity
            android:name=".ReportActivity"
            android:exported="false"
            android:label="@string/report_title" />
        <activity
            android:name=".BugReportActivity"
            android:exported="false"
            android:label="@string/bug_title" />
        <activity
            android:name=".DetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ForgotPassActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".SetLocationActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>